    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in library 'ffmonitor'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--lib",
                    "--package=ffmonitor"
                ],
                "filter": {
                    "name": "ffmonitor",
                    "kind": "lib"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug example 'monitor'",
            "cargo": {
                "args": [
                    "build",
                    "--example=monitor",
                    "--package=ffmonitor"
                ],
                "filter": {
                    "name": "monitor",
                    "kind": "example"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}